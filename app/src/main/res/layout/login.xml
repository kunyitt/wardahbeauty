<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registe1"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/log"
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textView"
        android:text="Welcome\nBack"
        android:textStyle="bold"
        android:textSize="45dp"
        android:layout_width="218dp"
        android:layout_height="141dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textView3"
        android:text="Hello, we miss you...."
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="218dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="EMAIL"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="254dp"

        />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="PASSWORD"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="309dp"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vector"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="265dp"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gembok"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="319dp"/>

    <TextView
        android:id="@+id/textView4"
        android:text="Forgot Password?"
        android:textSize="15dp"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="353dp"
        android:layout_marginLeft="220dp"
         />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="430dp"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/garis" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="490dp"
        />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/garis"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="500dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Google "
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="520dp"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"/>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flatcoloriconsgoogle"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="533dp"


        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Facebook "
        android:layout_marginLeft="220dp"
        android:layout_marginRight="250dp"
        android:layout_marginTop="520dp"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logosfacebook"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="533dp"/>

    <TextView
        android:id="@+id/textView7"
        android:text="Don't have an account? Register"
        android:textSize="16dp"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="85dp"
        />


</RelativeLayout>
